<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.userRegisterActivity">

    <TextView
        android:id="@+id/username_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用户名"
        android:textSize="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"/>

    <EditText
        android:id="@+id/user_register_name_edittext"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@+id/username_text" />

    <TextView
        android:id="@+id/userpassword_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/username_text"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:text="密   码"
        android:textSize="30dp" />

    <EditText
        android:id="@+id/user_register_password_edittext"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:layout_toRightOf="@+id/userpassword_text"
        android:layout_below="@+id/user_register_name_edittext"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/userrepassword_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userpassword_text"
        android:layout_marginTop="40dp"
        android:text="确认密码"
        android:textSize="30dp" />

    <EditText
        android:id="@+id/user_register_repassword_edittext"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:layout_toRightOf="@+id/userrepassword_text"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/user_register_password_edittext"/>

    <TextView
        android:id="@+id/userphone_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userrepassword_text"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:text="手机号"
        android:textSize="30dp" />

    <EditText
        android:id="@+id/user_register_phone_edittext"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/userphone_text"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/user_register_repassword_edittext"
        />

    <TextView
        android:id="@+id/usersex_text"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userphone_text"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:text="性   别"
        android:textSize="30dp" />

    <EditText
        android:id="@+id/user_register_sex_edittext"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/userphone_text"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/user_register_phone_edittext"
        />

    <TextView
        android:id="@+id/useraddress_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/usersex_text"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:text="地   址"
        android:textSize="30dp" />

    <EditText
        android:id="@+id/user_register_address_edittext"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/useraddress_text"
        android:layout_below="@+id/user_register_sex_edittext"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/register_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/useraddress_text"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="100dp"
        android:text="注册"
        android:textSize="30dp" />
    <Button
        android:id="@+id/register_back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/useraddress_text"
        android:layout_toRightOf="@+id/register_btn"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="50dp"
        android:text="返回"
        android:textSize="30dp"/>


</RelativeLayout>